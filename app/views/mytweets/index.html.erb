<h1>MyTweet Threads</h1>

<p><%= notice %></p>

<table class="table table-hover">
<% @mytweets.each do |mt| %>
<tbody>
  <tr>
    <th><%= mt.content %></th>
    <td><button type="botton" class="btn btn-success"><%= link_to 'View more details', mytweet_path(mt.id) %></button></td>
    <td><button type="botton" class="btn btn-info"><%= link_to "Edit your tweet", edit_mytweet_path(mt.id) %></button></td>
    <td><button type="botton" class="btn btn-warning"><%= link_to 'Delete your tweet', mytweet_path(mt.id), method: :delete ,data: { confirm: 'Are you sure to deleteï¼Ÿ' } %></button></td>
  </tr>
</tbody>
<% end %>
</table>

<%= link_to 'Create a new tweet!', new_mytweet_path %>
